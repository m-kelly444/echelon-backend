# Flask settings
FLASK_SECRET_KEY=railway_secret_key_for_echelon_app_$(openssl rand -hex 8)
DEBUG=false
TESTING=false

# CORS settings (wildcard for now, update with your frontend domains in Railway)
ALLOWED_ORIGINS=*

# Database settings
DB_PATH=data/echelon.db

# Directory settings
MODEL_DIR=models
CACHE_DIR=cache
DATA_DIR=data

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/echelon.log

# Scheduling
DATA_COLLECTION_INTERVAL_HOURS=6
PREDICTION_HORIZON_DAYS=7
TRAINING_INTERVAL_HOURS=12

# Model settings
MAX_FEATURES=1000
N_ESTIMATORS=100
CONFIDENCE_THRESHOLD=70
